# GitHub API Configuration
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_API_BASE_URL=https://api.github.com

# Database Configuration
DATABASE_URL=sqlite:///./database/githubbot.db
DATABASE_ECHO=false

# Application Configuration
APP_NAME=GitHub Bot WebUI
APP_VERSION=1.0.0
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Time Zone Configuration
DEFAULT_TIMEZONE=Asia/Singapore

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true
EMAIL_FROM=your-email@gmail.com

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_API_URL=https://api.telegram.org/bot

# WeChat Work (企业微信) Configuration
WECHAT_WEBHOOK_URL=https://qyapi.weixin.qq.com/cgi-bin/webhook/send?key=your-key

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook

# Task Scheduler Configuration
SCHEDULER_TIMEZONE=Asia/Singapore
DEFAULT_SCHEDULE_HOUR=9
DEFAULT_SCHEDULE_MINUTE=0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Cache Configuration (Optional - Redis)
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=3600

# Rate Limiting
GITHUB_API_RATE_LIMIT=5000
GITHUB_API_RATE_WINDOW=3600